<p id="notice"><%= notice %></p>

<h1>Перечень Дочерних Обществ</h1>

<table>
  <thead>
    <tr>
      <th>Название Дочернего Общества</th>
      <th>Описание</th>
      <th>Адрес</th>
      <th>Контактный телефон</th>
      <th>Факс</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scandos.each do |scando| %>
      <tr>
        <td><%= scando.do_name %></td>
        <td><%= scando.do_description %></td>
        <td><%= scando.do_address %></td>
        <td><%= scando.do_phone %></td>
        <td><%= scando.do_fax %></td>
        <td><%= link_to 'Показать', scando %></td>
        <td><%= link_to 'Редактировать', edit_scando_path(scando) %></td>
        <td><%= link_to 'Удалить', scando, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить Дочернее Общество', new_scando_path %>
